<% include ../partials/header %>
<!-- Sidebar -->
<div class="container-fluid">
    <div class="row">
        <% include ../partials/sidemenu %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2"><strong>Edit Issues</strong></h1>
            </div>
            <!-- CONTENT -->
            <div class="card">
                <div class="card-body">
                    <form action="/projects/issues/<%=projectid%>/edit/<%=issueid%>" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Issue ID</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="issueid" name="issueid" value="<%=dataisu.issueid%>"
                                    placeholder="Issue ID" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Project ID</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="projectid" name="projectid" value="<%=projectid%>"
                                    placeholder="Project ID" readonly>
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Tracker</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tracker" value="Bug" <%=dataisu.tracker=='Bug'
                                            ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios1">
                                            Bug
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tracker" value="Feature" <%=dataisu.tracker=='Feature'
                                            ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios2">
                                            Feature
                                        </label>
                                    </div>
                                    <div class="form-check disabled">
                                        <input class="form-check-input" type="radio" name="tracker" value="Supports" <%=dataisu.tracker=='Supports'
                                            ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios3">
                                            Supports
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Subject</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="subject" name="subject" value="<%= dataisu.subject %>"
                                    placeholder="Subject">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea type="text-area" class="form-control" id="description" name="description"
                                    placeholder="Description"><%= dataisu.description %></textarea>
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Status</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios1"
                                            value="New" <%=dataisu.status=='New' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios1">
                                            New
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios2"
                                            value="In Progress" <%=dataisu.status=='In Progress' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios2">
                                            In Progress
                                        </label>
                                    </div>
                                    <div class="form-check disabled">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios3"
                                            value="Resolved" <%=dataisu.status=='Resolved' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios3">
                                            Resolved
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios4"
                                            value="Feedback" <%=dataisu.status=='Feedback' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios4">
                                            Feedback
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios5"
                                            value="Closed" <%=dataisu.status=='Closed' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios5">
                                            Closed
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="status" id="gridRadios6"
                                            value="Rejected" <%=dataisu.status=='Rejected' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios6">
                                            Rejected
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Priority</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="priority" id="gridRadios1"
                                            value="Normal" <%=dataisu.priority=='Normal' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios1">
                                            Normal
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="priority" id="gridRadios2"
                                            value="High" <%=dataisu.priority=='High' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios2">
                                            High
                                        </label>
                                    </div>
                                    <div class="form-check disabled">
                                        <input class="form-check-input" type="radio" name="priority" id="gridRadios3"
                                            value="Urgent" <%=dataisu.priority=='Urgent' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios3">
                                            Urgent
                                        </label>
                                    </div>
                                    <div class="form-check disabled">
                                        <input class="form-check-input" type="radio" name="priority" id="gridRadios3"
                                            value="Immediate" <%=dataisu.priority=='Immediate' ? 'checked' : '' %>>
                                        <label class="form-check-label" for="gridRadios3">
                                            Immediate
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group row">
                            <label class="col-2 col-form-label"> Assignee</label>
                            <div class="col-10">
                                <select class="custom-select" name="assignee">
                                    <option selected>Choose the Assigner ...</option>
                                    <%for(i=0;i<assignee.length;i++){%>
                                    <option value="<%=assignee[i].userid%>">
                                        <%=assignee[i].fullname%>
                                    </option>
                                    <%}%>

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Start Date</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" id="startdate" name="startdate" value="<%= moment(dataisu.startdate).format('YYYY-MM-DD')%>"
                                    placeholder="Start Date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Due Date</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" id="dueDate" name="duedate" value="<%= moment(dataisu.duedate).format('YYYY-MM-DD')%>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Estimated Time</label>
                            <div class="col-sm-10">
                                <input type="integer" class="form-control" id="etime" name="etime" value="<%= dataisu.etime %>"
                                    placeholder="Estimated Time">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-2 col-form-label">% done</label>
                            <div class="col-10">
                                <select class="custom-select" name="done">
                                    <option selected>0</option>
                                    <option value="1">20</option>
                                    <option value="2">40</option>
                                    <option value="3">60</option>
                                    <option value="4">80</option>
                                    <option value="5">100</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Files</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control-file" id="" name="filedoc">
                            </div>
                        </div>

                        <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <P>loc :
                                    <%=dataisu.files%>
                                </P>
                                <img class="img-thumbnail" width="200" height="255" src="/file_upload/<%=dataisu.files%>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Spent Time</label>
                            <div class="col-sm-10">
                                <input type="real" class="form-control" id="" name="spenttime" value="<%= dataisu.spenttime %>"
                                    placeholder="Spent Time">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Target Version</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="targetversion" name="targetversion" value="<%= dataisu.targetversion %>"
                                    placeholder="Target Version">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="from1" class="col-sm-2 col-form-label">Author</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="member">
                                    <option value="">Chooose Parent Task...</option>
                                    <% datatask.forEach((item) => { %>
                                    <option value="<%= item.issueid %>" <%=item.issueid ? ' selected' : '' ; %>
                                    </option>
                                    <%= item.subject %>
                                    </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                </div>

                </form>
            </div>
    </div>
    </main>
</div>
</div>
</body>

</html>