<% include ../partials/header %>
    <!-- Sidebar -->
    <div class="container-fluid">
        <div class="row">
            <% include ../partials/sidemenu %>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                    <h1 class="h2"><strong>New Issues</strong></h1>
                </div>
                <!-- CONTENT -->
                <div class="card">
                    <div class="card-body">
                        <form action="/projects/issues/<%=projectid%>/add" method="post" enctype="multipart/form-data">
                            <fieldset class="form-group">
                                <div class="row">
                                    <legend class="col-form-label col-sm-2 pt-0">Tracker</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="tracker"
                                                 value="Bug">
                                            <label class="form-check-label" for="gridRadios1">
                                                Bug
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="tracker"
                                                value="Feature">
                                            <label class="form-check-label" for="gridRadios2">
                                                Feature
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="tracker"
                                                id="gridRadios3" value="Supports">
                                            <label class="form-check-label" for="gridRadios3">
                                                Supports
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Subject</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea type="text-area" class="form-control" id="" name="description"
                                        placeholder="Description" required></textarea>
                                </div>
                            </div>
                            <fieldset class="form-group">
                                <div class="row">
                                    <legend class="col-form-label col-sm-2 pt-0">Status</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios1" value="New" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                New
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios2" value="In Progress" disabled>
                                            <label class="form-check-label" for="gridRadios2">
                                                In Progress
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios3" value="Resolved" disabled>
                                            <label class="form-check-label" for="gridRadios3">
                                                Resolved
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios2" value="Feedback" disabled>
                                            <label class="form-check-label" for="gridRadios4">
                                                Feedback
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios2" value="Closed" disabled>
                                            <label class="form-check-label" for="gridRadios5">
                                                Closed
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="status"
                                                id="gridRadios2" value="Rejected" disabled>
                                            <label class="form-check-label" for="gridRadios6">
                                                Rejected
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="form-group">
                                <div class="row">
                                    <legend class="col-form-label col-sm-2 pt-0">Priority</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="priority"
                                                id="gridRadios1" value="Normal">
                                            <label class="form-check-label" for="gridRadios1">
                                                Normal
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="priority"
                                                id="gridRadios2" value="High">
                                            <label class="form-check-label" for="gridRadios2">
                                                High
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="priority"
                                                id="gridRadios3" value="Urgent">
                                            <label class="form-check-label" for="gridRadios3">
                                                Urgent
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="priority"
                                                id="gridRadios3" value="Immediate">
                                            <label class="form-check-label" for="gridRadios4">
                                                Immediate
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-group row">
                                <label class="col-2 col-form-label"> Assignee</label>
                                <div class="col-10">
                                    <select class="custom-select" name="assignee" required>
                                        <option selected>Choose the Assigner ...</option>
                                        <%for(i=0;i<assignee.length;i++){%>
                                            <option value="<%=assignee[i].userid%>"><%=assignee[i].fullname%></option>                                            
                                        <%}%>
                  
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Start Date</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" id="" name="startdate" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Due Date</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" id="" name="duedate" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Estimated Time</label>
                                <div class="col-sm-10">
                                    <input type="integer" class="form-control" id="" name="etime" placeholder="Estimated Time" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">% done</label>
                                <div class="col-10">
                                    <select class="custom-select" name="done" required>
                                        <option selected>0</option>
                                        <option value="1">20</option>
                                        <option value="2">40</option>
                                        <option value="3">60</option>
                                        <option value="4">80</option>
                                        <option value="5">100</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="from1" class="col-sm-2 col-form-label">Files</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control" id="" placeholder=""
                                    name="filedoc" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <br>
</body>
</html>